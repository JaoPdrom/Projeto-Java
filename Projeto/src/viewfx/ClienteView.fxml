<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="679.0" prefWidth="1260.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClienteC">
    <top>
        <ToolBar>
           <items>
               <Button fx:id="btnNovo" onAction="#onNovo" text="Novo" />
               <Button fx:id="btnEditar" onAction="#onEditar" text="Editar" />
               <Button fx:id="btnSalvar" onAction="#onSalvar" text="Salvar" />
               <Button fx:id="btnCancelar" onAction="#onCancelar" text="Cancelar" />
               <Button fx:id="btnExcluir" onAction="#onExcluir" text="Excluir" />
               <Button fx:id="btnAtualizar" onAction="#onAtualizar" text="Atualizar" />
               <Separator />
               <Label text="Buscar:" />
               <TextField fx:id="txtBuscar" promptText="Nome ou Documento" />
               <Label text="Status:" />
               <ComboBox fx:id="cbStatus" prefWidth="120.0" />
               <Label text="Tipo:" />
               <ComboBox fx:id="cbTipoPessoa" prefWidth="120.0" />
           </items>
        </ToolBar>
    </top>
    <center>
        <SplitPane dividerPositions="0.45">
            <items>
                <VBox spacing="6.0">
                    <children>
                        <TableView fx:id="tblClientes" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colDocumento" prefWidth="120" text="CPF" />
                                <TableColumn fx:id="colNome" prefWidth="180" text="Nome/Razao" />
                                <TableColumn fx:id="colTipo" prefWidth="60" text="Tipo" />
                                <TableColumn fx:id="colEmail" prefWidth="160" text="Email" />
                                <TableColumn fx:id="colCelular" prefWidth="120" text="Celular" />
                                <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
                                <TableColumn fx:id="colCadastro" prefWidth="100" text="Cadastro" />
                            </columns>
                        </TableView>
                    </children>
                    <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
                </VBox>

                <TabPane>
                    <tabs>
                        <Tab closable="false" text="Dados">
                            <content>
                                <GridPane hgap="8" vgap="8">
                                    <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="30" />
                                        <ColumnConstraints percentWidth="70" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label text="Tipo de Pessoa:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <ComboBox fx:id="cbTipoPessoaForm" prefWidth="220" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtDocumento" promptText="CPF (11)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                        <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                        <Label text="Nascimento:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                        <DatePicker fx:id="dpNascimentoFundacao" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                        <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                        <ComboBox fx:id="cbSexo" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                        <Label text="Ativo:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                                        <CheckBox fx:id="chkAtivo" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                                        <Label text="Telefone (opcional):" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                                        <HBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="9">
                                            <children>
                                                <TextField fx:id="txtTelPais" prefWidth="60" promptText="Pais" />
                                                <TextField fx:id="txtTelDdd" prefWidth="60" promptText="DDD" />
                                                <TextField fx:id="txtTelNumero" prefWidth="160" promptText="Numero" />
                                            </children>
                                        </HBox>

                                        <Label text="Endereco (opcional):" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                                        <HBox prefHeight="35.0" prefWidth="730.0" spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="10">
                                            <children>
                                    <ComboBox fx:id="cbEstado" prefHeight="25.0" prefWidth="117.0" promptText="Estado" />
                                    <ComboBox fx:id="cbCidade" prefHeight="25.0" prefWidth="160.0" promptText="Cidade" />
                                    <ComboBox fx:id="cbLogradouro" prefWidth="180.0" promptText="Logradouro" />
                                                <TextField fx:id="txtCep" prefWidth="90" promptText="CEP (8)" />
                                            </children>
                                        </HBox>
                              <HBox prefHeight="33.0" prefWidth="714.0" spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="11">
                                 <children>
                                                <TextField fx:id="txtRua" prefWidth="220" promptText="Nome da Rua" />
                                                <ComboBox fx:id="cbBairro" prefWidth="160" promptText="Bairro" />
                                                <TextField fx:id="txtEndNumero" prefWidth="80" promptText="N" />
                                                <TextField fx:id="txtEndComplemento" prefWidth="180" promptText="Complemento (Opcional)" />
                                 </children>
                              </HBox>
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>
                            </content>
                        </Tab>

                        <Tab closable="false" text="Enderecos">
                            <content>
                                <VBox spacing="6">
                                    <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
                                    <children>
                                        <HBox spacing="6">
                                            <children>
                                                <Button onAction="#onAdicionarEndereco" text="Adicionar" />
                                                <Button onAction="#onEditarEndereco" text="Editar" />
                                                <Button onAction="#onRemoverEndereco" text="Remover" />
                                                <Button onAction="#onMarcarEnderecoPrincipal" text="Marcar Principal" />
                                            </children>
                                        </HBox>
                                        <TableView fx:id="tblEnderecos" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="colEndCep" prefWidth="90" text="CEP" />
                                                <TableColumn fx:id="colEndLogradouro" prefWidth="150" text="Logradouro" />
                                                <TableColumn fx:id="colEndNumero" prefWidth="80" text="Numero" />
                                                <TableColumn fx:id="colEndBairro" prefWidth="120" text="Bairro" />
                                                <TableColumn fx:id="colEndCidade" prefWidth="140" text="Cidade" />
                                                <TableColumn fx:id="colEndUf" prefWidth="60" text="UF" />
                                                <TableColumn fx:id="colEndPrincipal" prefWidth="80" text="Principal" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>

                        <Tab closable="false" text="Telefones">
                            <content>
                                <VBox spacing="6">
                                    <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
                                    <children>
                                        <HBox spacing="6">
                                            <children>
                                                <Button onAction="#onAdicionarTelefone" text="Adicionar" />
                                                <Button onAction="#onEditarTelefone" text="Editar" />
                                                <Button onAction="#onRemoverTelefone" text="Remover" />
                                            </children>
                                        </HBox>
                                        <TableView fx:id="tblTelefones" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="colTelPais" prefWidth="60" text="Pais" />
                                                <TableColumn fx:id="colTelDdd" prefWidth="60" text="DDD" />
                                                <TableColumn fx:id="colTelNumero" prefWidth="140" text="Numero" />
                                                <TableColumn fx:id="colTelTipo" prefWidth="120" text="Tipo" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <HBox spacing="8" BorderPane.alignment="CENTER_LEFT">
            <padding><Insets bottom="4" left="8" right="8" top="4" /></padding>
            <children>
                <Label fx:id="lblStatus" text="Pronto" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
